{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>knowledge-work/renovate-config',
    ':semanticCommits',
    ':separateMajorReleases',
    ':ignoreUnstable',
    'helpers:pinGitHubActionDigestsToSemver',
    'schedule:automergeNonOfficeHours',
  ],
  configMigration: true,
  rebaseWhen: 'conflicted',
  prNotPendingHours: 1,
  minimumReleaseAge: '3 days',
  postUpdateOptions: [
    'gomodTidy',
    'pnpmDedupe',
    'npmDedupe',
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
  vulnerabilityAlerts: {
    labels: [
      'security',
    ],
    automerge: true,
  },
  packageRules: [
    {
      matchDepTypes: [
        'action',
      ],
      pinDigests: true,
      matchPackageNames: [
        '!actions/{/,}**',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchCurrentVersion: '!/^0/',
      automerge: true,
    },
  ],
}
